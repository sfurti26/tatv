            <h1>Today's Appointments</h1>
            <table class="body-table1" id="dash-table1">
                
                <tr>
                    <td id="th1" colspan="6">Doctor's Appointments</td>
                </tr>
                
                <tr>
                    <tr>
                    <th id="th2">Token NO.</th>
                    <th>Name</th>
                    <th>Doctor</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Status</th>
                    </tr>
                </tr>
                
                <tbody>
               {{#each rows}}
                <tr >
                   <td>{{this.token}}</td> 
                   <td>{{this.Name}}</td>
                   <td>{{this.doctor}}</td>
                   <td>{{this.appo_date}}</td>
                   <td>{{this.appo_time}}</td>
                   <td>{{this.appo_status}}</td>
                   {{!-- <td><input type="radio" name="status" value="Visited">Visited<br>
                    <input type="radio" name="status" value="Not Visited">Not Visited</td> --}}
