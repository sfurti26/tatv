</head>

<body id="body-pd">
  <div class="body-style">
      <header class="header" id="header">
          <div class="header_toggle"> <i class="fas fa-bars" id="header-toggle"></i> </div>
          <nav><div class="header-logo">
              <img class="logo-1" src="/images/tatva_final1.png" alt="Tatv">
              <span><img class="logo-2" src="/images/logo.png" alt="Banasthali Vidyapith"></span>
          </div></nav>
      </header>   
      <header>
          <nav class="header-navigation">
              <ul class="nav-content">
                  <li class="li-items" ><a href="/contact">CONTACT US</a></li>
                  <li class="li-items" ><a href="/about">ABOUT US</a></li>
                  {{!-- <li class="li-items" ><a href="/">HOME</a></li> --}}
              </ul>
          </nav>
      </header>
  </div>    
  <div class="l-navbar" id="nav-bar">
      <nav class="nav">
          <div><a href="/changepassword" class="nav_logo"> <i class="fa fa-user" aria-hidden="true"></i> <span class="nav_name"></span> </a>
              <div class="nav_list"> 
                  <a href="/auth/stud_dash" class="nav_link"> <i class="fa fa-th" aria-hidden="true"></i><span class="nav_name">Dashboard</span> </a> 
                  <a href="/auth/bookAppointment" class="nav_link active"> <i class="fa fa-user-md" aria-hidden="true"></i> <span class="nav_name">Appointment</span> </a>
                  <a href="/auth/bookLabTest" class="nav_link"> <i class="fa fa-flask" aria-hidden="true"></i> <span class="nav_name">Lab Test</span></a> 
              </div>
          </div> 
          <a href="/auth/logout" class="nav_link"><i class="fas fa-sign-out-alt"></i> <span class="nav_name">Sign Out</span> </a>
      </nav>
  </div>

<section class="contact">
  <div class="content">
    <div class="contactForm">
      <form method="post" id="appointment" action="/auth/bookAppointment">
        <h2>BOOK APPOINTMENT</h2>
          <div class="inputBox">
            <input type="text" required="required" id="studentid" name="studentid">
            <span>Banasthali Id</span>
          </div>
          <div class="inputBox">
            <textarea required="required" id="problem" name="problem"></textarea>
            <span>Type your Problem...</span>
          </div>
          <div class="inputBox">
            <input type="date" required="required" id="Date" name="Date">
            <script>
              var date = new Date();
              var day = date.getDate();
              var month = date.getMonth() + 1;
              var year = date.getFullYear();
              if (month < 10) month = "0" + month;
              if (day < 10) day = "0" + day;
              var today = year + "-" + month + "-" + day;
              document.getElementById('Date').value = today;

            </script> 
          </div>
          <div class="inputBox">
            <input type="text" required="required" id="docid" name="docid">
            <span>Doctor's ID (Fill out from table)</span>
          </div>
          <div class="inputBox">
              <input type="submit" name="submit" value="SUBMIT">
          </div>
        </form>
        {{#if message}}
          <P style="font-size: small; color:#6C340F">{{message}}</p>
        {{/if}}
    </div>
    <div class="sec-table">
      <table class="table">
        <thead><h3>Available Doctor's for the Day</h3>
          <tr>
            <th scope="col">DOCTOR'S ID</th>
            <th scope="col">NAME</th>
            <th scope="col">SPECIALTY</th>
            <th scope="col">AVAILABLE TIME</th>
          </tr>
        </thead>
        <tbody>
          {{#each rows}}
            <tr>
              <th scope="row">{{this.Id}}</th>
              <td>{{this.doc_name}}</td>
              <td>{{this.specialty}}</td>
              <td>{{this.doc_time1}} : {{this.doc_time2}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
  </div>
</section>


</body>
</html>

